{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["@nuxt/types", "@types/node"],
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    }
  }
}
